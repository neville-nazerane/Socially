</div>

<!-- Comment wrap START -->
<ul class="comment-wrap list-unstyled">

    @if (Comments is not null)
    {
        foreach (var comment in Comments.Reverse())
        {
            <!-- Comment item START -->
            <li class="comment-item">
                <div class="d-flex">
                    <!-- Avatar -->
                    <div class="avatar avatar-xs">
                        <a href="#!"><img class="avatar-img rounded-circle" src="assets/images/avatar/05.jpg" alt=""></a>
                    </div>
                    <!-- Comment by -->
                    <div class="ms-2">
                        <div class="bg-light p-3 rounded">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1"> <a href="#!"> Frances Guerrero </a> </h6>
                                <small class="ms-2">4min</small>
                            </div>
                            <p class="small mb-0">@comment.Text</p>
                        </div>
                        <!-- Comment react -->
                        <ul class="nav nav-divider pt-2 small">
                            <li class="nav-item">
                                <a class="nav-link" href="#!"> Like (1)</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" @onclick:preventDefault @onclick=@(() => ShowComments(comment)) href="#"> Reply</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#!"> View 6 replies</a>
                            </li>
                        </ul>
                    </div>
                </div>

                @if (comment.Comments is not null)
                {
                     <ul class="comment-item-nested list-unstyled">
                        <CommentsDisplay Comments=comment.Comments ParentCommentId=comment.Id PostId=PostId />
                    </ul>
                }

            </li>
            <!-- Comment item END -->
        }
    }


</ul>
<!-- Comment wrap END -->