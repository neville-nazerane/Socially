<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Socially.MobileApp.Components.ProfileNavButton"
      
      BackgroundColor="{StaticResource ProfileButton}"
      Padding="10"
      RowDefinitions="3*, 2*">
    <Image x:Name="img">
        <Image.Source>
            <FontImageSource Color="{StaticResource Black}" />
        </Image.Source>
    </Image>

    <Label x:Name="lbl"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           Grid.Row="1" />


</Grid>
