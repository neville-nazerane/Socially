[Unit]
Description=Socially API

[Install]
WantedBy=multi-user.target

[Service]
WorkingDirectory=#{service.directory}#
ExecStart=/usr/bin/dotnet #{service.directory}#/#{service.dll}# --urls http://localhost:#{service.port}#
Restart=always
# Restart service after 10 seconds if the dotnet service crashes:
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=sociallyAPI
User=www-data
Environment=ASPNETCORE_ENVIRONMENT=Production
